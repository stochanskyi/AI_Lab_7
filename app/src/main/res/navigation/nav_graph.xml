<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_positions">

    <fragment
        android:id="@+id/fragment_positions"
        android:name="com.mars.ai_lab_7.presentation.characteristics.CharacteristicsFragment"
        tools:layout="@layout/fragment_positions">

        <argument
            android:name="behaviour"
            app:argType="com.mars.ai_lab_7.presentation.characteristics.behaviour.CharacteristicsBehaviour"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/navigate_to_candidates"
            app:destination="@id/fragment_candidates" />

    </fragment>

    <fragment
        android:id="@+id/fragment_candidates"
        android:name="com.mars.ai_lab_7.presentation.characteristics.CharacteristicsFragment"
        tools:layout="@layout/fragment_positions">

        <argument
            android:name="behaviour"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="com.mars.ai_lab_7.presentation.characteristics.behaviour.CharacteristicsBehaviour" />

    </fragment>

</navigation>